/var/log/cron
/var/log/maillog
/var/log/messages
/var/log/secure
/var/log/spooler
/var/log/tasmota/*log
{
    missingok
    sharedscripts
    postrotate
	/bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
{
        create
	rotate 4
        missingok
        notifempty
        sharedscripts
        compress
        dateext
        dateformat -%Y%m%d
        olddir archive
}
